struct aabb3D
{
   vec4 mMin;
   vec4 mMax;
};

bool overlap(aabb3D a, aabb3D b)
{

   if(a.mMax.x < b.mMin.x || b.mMax.x < a.mMin.x) {return false;}
   if(a.mMax.y < b.mMin.y || b.mMax.y < a.mMin.y) {return false;}
   if(a.mMax.z < b.mMin.z || b.mMax.z < a.mMin.z) {return false;}
   return true;
}

