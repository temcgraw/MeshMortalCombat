vec3 div_free(vec3 x, vec3 y, vec3 c, float e)
{
	vec3 diff = x-y;
	mat3 P = ((4.0*e-4.0*e*e*dot(diff,diff))*mat3(1.0) + 4.0*e*e*outerProduct(diff, diff))*exp(-e*dot(diff,diff));
	return P*c;
}


